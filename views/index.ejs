<%- include('layout/header') %>
 
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) {  %>
              <div class="alert alert-dismissible fade show alert-<%=message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive text-white">
                <% if (Users!='') { %>
                 
                    <table class="table table-striped text-center my-3 ">
                        <thead>
                            <tr class="table-secondary">
                                <th>ID</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Acton</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% Users.forEach((row,index) => { %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td class="">
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>                                    
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>                                    
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else{%>
                    <h1 class="text-center text-white mt-5">No users Found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>