<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-dark">
                    <h3 class="text-light">Add New User</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/addUser" method="post" id="add-form" onsubmit="return validateForm()">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required oninput="validateName(this)">
                            <small class="text-muted" id="nameError"></small>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required oninput="validateEmail(this)">
                            <small class="text-muted" id="emailError"></small>
                        </div>
                        <div class="mb-3">
                            <label for="phone">Phone</label>
                            <input type="tel" name="phone" class="form-control form-control-lg" placeholder="Enter Phone" pattern="[0-9]{10}" required oninput="validatePhone(this)">
                            <small class="text-muted" id="phoneError"></small>
                        </div>
                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter Password" minlength="8" required oninput="validatePassword(this)">
                            <small class="text-muted" id="passwordError"></small>
                        </div>
                        <%if(message){%>
                            <div class="text-white text-center">
                                <p class="test text-danger"><%= message.message %></p>
                            </div>
                        <%}%>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add User" class="btn btn-secondary btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('layout/footer') %>